<form action="/notes" method="post">
    <label for="title">Title</label>
    <input type="text" name="title" placeholder= <%= @note.title %>>
    <label for="content">Content</label>
    <textarea name="content" placeholder= <%= @note.content %>cols="30" rows="10"></textarea>
    <input type="hidden" name="note_id" value = <%= params[:id] %>>
    <input type="submit" name="create" value="Create note">
</form>